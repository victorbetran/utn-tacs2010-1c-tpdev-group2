<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	
	<session-factory>
	
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		
		<!-- con :nombreDB luego del host indicamos la base a la que nos queremos conectar. -->
		<property name="hibernate.connection.url">
		    jdbc:hsqldb:file:db/tp-group2-db;shutdown=true
		</property>
		<property name="hibernate.connection.username">mrpojo</property>
		<property name="hibernate.connection.password">therightsideofthecode</property>
		
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		
		<property name="hibernate.connection.pool_size">3</property>
        <!-- Use the C3P0 connection pool provider -->
        <!-- 
			<property name="hibernate.c3p0.min_size">5</property>
			<property name="hibernate.c3p0.max_size">20</property>
			<property name="hibernate.c3p0.timeout">300</property>
			<property name="hibernate.c3p0.max_statements">50</property>
			<property name="hibernate.c3p0.idle_test_period">3000</property>
		 -->

		<!-- Schema Export 	-->
		<property name="hbm2ddl.auto">create</property>

		<!-- Show and print nice SQL on stdout -->
		<property name="show_sql">true</property>

		<!-- List of annotated classes -->
		<mapping class="org.utn.tacs.tp.group2.pedido.Pedido"/>
		<mapping class="org.utn.tacs.tp.group2.pedido.EstadoPedido"/>
		<mapping class="org.utn.tacs.tp.group2.pieza.Pieza"/>
		<mapping class="org.utn.tacs.tp.group2.pieza.EstadoPieza"/>
		<mapping class="org.utn.tacs.tp.group2.pieza.Auto"/>
		<mapping class="org.utn.tacs.tp.group2.pieza.CategoriaPieza"/>
		
	</session-factory>
	
</hibernate-configuration>